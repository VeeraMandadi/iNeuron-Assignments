   "source": [
    "# max_nu=5\n",
    "for i in range(max_nu):\n",
    "    print((i+1)*'* ')\n",
    "    if (i==max_nu-1):\n",
    "        for j in range(max_nu,0,-1):\n",
    "            print((j-1)*'* ')\n",
    "                "
